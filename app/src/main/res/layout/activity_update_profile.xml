<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#E6E6E6">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:src="@drawable/ic_background_1"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="50dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cập nhật hồ sơ"
                        android:textStyle="bold"
                        android:textColor="#111"
                        android:gravity="center"
                        android:textSize="25sp" />
                    <EditText
                        android:id="@+id/edtName"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="Họ và tên"
                        android:background="@drawable/ic_custom_1"
                        android:layout_marginTop="15dp"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:singleLine="true"/>
                    <EditText
                        android:id="@+id/edtGender"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="Giới tính"
                        android:background="@drawable/ic_custom_1"
                        android:layout_marginTop="15dp"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:singleLine="true" />
                    <EditText
                        android:id="@+id/edtBirthday"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="Ngày sinh"
                        android:background="@drawable/ic_custom_1"
                        android:layout_marginTop="15dp"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:singleLine="true"/>
                    <EditText
                        android:id="@+id/edtCmnd"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="CMND/PASSPORT"
                        android:background="@drawable/ic_custom_1"
                        android:layout_marginTop="15dp"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:singleLine="true"/>
                    <EditText
                        android:id="@+id/edtCountry"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="Quốc tịch"
                        android:background="@drawable/ic_custom_1"
                        android:layout_marginTop="15dp"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:singleLine="true"/>
                    <EditText
                        android:id="@+id/edtNation"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="Dân tộc"
                        android:background="@drawable/ic_custom_1"
                        android:layout_marginTop="15dp"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:singleLine="true"/>
                    <EditText
                        android:id="@+id/edtPosition"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="Địa chỉ"
                        android:background="@drawable/ic_custom_1"
                        android:layout_marginTop="15dp"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:singleLine="true"/>
                    <Button
                        android:onClick="onClickUpdate"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Cập Nhật Ngay"
                        android:background="@drawable/ic_custom_2"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </FrameLayout>
</androidx.core.widget.NestedScrollView>